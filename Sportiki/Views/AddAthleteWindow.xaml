<Window x:Class="Sportiki.Views.AddAthleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sportiki.Views"
        xmlns:models="clr-namespace:Sportiki.DB"
        xmlns:conv="clr-namespace:Sportiki.Converters"
        mc:Ignorable="d"
        Title="AddAthlete" Height="400" Width="350">
    <Window.Resources>
        <conv:DateTimeToDateOnly x:Key="ddConverter"/>
    </Window.Resources>
    <StackPanel Margin="15">
        <TextBlock Text="Имя:"/>
        <TextBox Text="{Binding CurrentAthlete.FirstName}" Margin="0 5 0 10"/>

        <TextBlock Text="Фамилия:"/>
        <TextBox Text="{Binding CurrentAthlete.LastName}" Margin="0 5 0 10"/>

        <TextBlock Text="Дата рождения:" Margin="0,0,0,5"/>
        <DatePicker SelectedDate="{Binding CurrentAthlete.Birthday, Converter={StaticResource ddConverter}}" Margin="0,0,0,10"/>

        <TextBlock Text="Категория:" Margin="0,0,0,5"/>
        <ComboBox DisplayMemberPath="Category1" ItemsSource="{Binding Categories}" 
                     SelectedItem="{Binding CurrentAthlete.Category}" Margin="0,0,0,10"/>

        <TextBlock Text="Уровень:" Margin="0,0,0,5"/>
        <ComboBox DisplayMemberPath="Level1" ItemsSource="{Binding Levels}" 
                     SelectedItem="{Binding CurrentAthlete.Level}" Margin="0,0,0,20"/>

        <Button Content="Добавить" Click="AddAthlete_Click" Height="30"/>
    </StackPanel>
</Window>
