<Window x:Class="Sportiki.AddParticipationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sportiki"
        mc:Ignorable="d"
        Title="Запись на тренировку" Height="400" Width="300">
    <StackPanel Margin="15">
        <TextBlock Text="Выберите спортсмена:"/>
        <ComboBox x:Name="AthleteCombo" DisplayMemberPath="FullName" Margin="0 5 0 10"/>

        <TextBlock Text="Выберите тренировку:"/>
        <ComboBox x:Name="TrainingCombo" DisplayMemberPath="Title" Margin="0 5 0 10"/>

        <TextBlock Text="Оценка тренировки (от 1 до 5)"/>
        <ComboBox x:Name="GradeCombo" Margin="0 5 0 10">
            <ComboBoxItem Content="1 - Плохо"/>
            <ComboBoxItem Content="2 - Удовлетворительно"/>
            <ComboBoxItem Content="3 - Хорошо"/>
            <ComboBoxItem Content="4 - Очень хорошо"/>
            <ComboBoxItem Content="5 - Отлично"/>
        </ComboBox>

        <TextBlock Text="Комментарий тренера (необязательно):"/>
        <TextBox x:Name="CommentBox" Height="60" Margin="0 5 0 20"/>

        <Button Content="Записать участие" Click="Save_Click" Height="30"/>
    </StackPanel>
</Window>
