<Window x:Class="SportsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sportiki"
        xmlns:models="clr-namespace:Sportiki.DB"
        mc:Ignorable="d"
        Title="Управление тренировками" Height="600" Width="900">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Список спортсменов -->
        <DataGrid x:Name="AthletesGrid" Grid.Column="0" Margin="10"
                 ItemsSource="{Binding Athletes}" AutoGenerateColumns="False"
                 IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="100"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="100"/>
                <DataGridTextColumn Header="Дата рождения" Binding="{Binding Birthday, StringFormat=\{0:dd.MM.yyyy\}}" Width="100"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category.Category1}" Width="100"/>
                <DataGridTextColumn Header="Уровень" Binding="{Binding Level.Level1}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Форма добавления -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Добавить спортсмена" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <TextBlock Text="Имя:" Margin="0,0,0,5"/>
            <TextBox Text="{Binding InsertAthlete.FirstName}" Margin="0,0,0,10"/>

            <TextBlock Text="Фамилия:" Margin="0,0,0,5"/>
            <TextBox Text="{Binding InsertAthlete.LastName}" Margin="0,0,0,10"/>

            <TextBlock Text="Дата рождения:" Margin="0,0,0,5"/>
            <DatePicker SelectedDate="{Binding InsertAthlete.Birthday}" Margin="0,0,0,10"/>

            <TextBlock Text="Категория:" Margin="0,0,0,5"/>
            <ComboBox DisplayMemberPath="Category1" ItemsSource="{Binding Categories}" 
                     SelectedItem="{Binding InsertAthlete.Category}" Margin="0,0,0,10"/>

            <TextBlock Text="Уровень:" Margin="0,0,0,5"/>
            <ComboBox DisplayMemberPath="Level1" ItemsSource="{Binding Levels}" 
                     SelectedItem="{Binding InsertAthlete.Level}" Margin="0,0,0,20"/>

            <Button Content="Добавить" Click="InsertAthleteMethod" Height="30"/>
            <Button Content="Обновить список" Click="Refresh_Click" Height="30" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>